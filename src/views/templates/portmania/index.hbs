    <style>
        @import url('https://fonts.googleapis.com/css2?family=Ubuntu&display=swap');
        body {
            font-family: 'Ubuntu', sans-serif;
        }
        
        * {
            margin: 0;
            padding: 0;
        }
        
        .wave-sec {
            width: 100%;
            height: 100vh;
            position: relative;
            background: #062c66;
            overflow: hidden;
        }
        
        .wave-sec .wave {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 100px;
            background: url("/templateDependencies/background_images/portmania.png");
            background-size: 1000px 100px;
        }
        
        .wave-sec .wave.wave1 {
            animation: animate1 30s linear infinite;
            z-index: 1000;
            opacity: 1;
            animation-delay: 0s;
            bottom: 0;
        }
        
        .wave-sec .wave.wave2 {
            animation: animate2 15s linear infinite;
            z-index: 999;
            opacity: .5;
            animation-delay: -5s;
            bottom: 10px;
        }
        
        .wave-sec .wave.wave3 {
            animation: animate2 15s linear infinite;
            z-index: 999;
            opacity: .2;
            animation-delay: -2s;
            bottom: 15px;
        }
        
        .wave-sec .wave.wave4 {
            animation: animate2 10s linear infinite;
            z-index: 997;
            opacity: .7;
            animation-delay: -2s;
            bottom: 20px;
        }
        
        @keyframes animate1 {
            0% {
                background-position-x: 0;
            }
            100% {
                background-position-x: 1000px;
            }
        }
        
        @keyframes animate2 {
            0% {
                background-position-x: 0;
            }
            100% {
                background-position-x: -1000px;
            }
        }
        /* ----------Navbar CSS-------- */
        
        .nav_bg {
            background-color: #062c66;
        }
        
        .nav_font {
            font-size: 18px;
        }
        
