        .projects .card {
            cursor: pointer;
            border-radius: 10px;
            color: white;
            background-color: lightslategrey;
            box-shadow: 3px 10px 15px gray;
            transition: 0.3s;
        }
        
        .fas {
            font-size: 28px;
            padding: 12px 12px;
            color: blue;
        }
        
        .far {
            font-size: 28px;
            padding: 12px 12px;
            color: blue;
        }
        
        .address {
            color: black;
            cursor: text;
            margin: 5px auto 10px 10px;
            font-size: 20px;
            font-family: 'Ubuntu', sans-serif;
        }
        
        .links p {
            margin-top: 10px !important;
