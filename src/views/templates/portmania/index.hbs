            font-weight: bold;
        }
        
        .font-style {
            font-weight: bold;
        }
        /* ---------Fab Icon CSS--------- */
        
        .fab {
            font-size: 28px;
            padding: 12px 12px;
            color: black;
            background-color: #01214e;
            border-radius: 50%;
        }
        
        .fab:hover {
            color: blue;
        }
        
        .midPage {
            transform: translateY(90%);
        }
        
        .midPage h1 {
            color: white;
            font-size: 45px;
        }
        
        .midPage p {
            color: white;
            font-size: 20px;
        }
        
        .about {
            margin: 50px 0 60px 0;
        }
        /* ---------Skills Section CSS--------- */
        
        .hide_icon {
            display: none;
        }
        
        .skills {
            margin: 50px 0 60px 0;
        }
        /* ---------Project Section CSS--------- */
        
        .projects {
            margin: 50px 0 60px 0;
