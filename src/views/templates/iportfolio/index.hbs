{{#each usertemplate}}
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
      <a class="navbar-brand" href="#">iPortfolio</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="#intro">Home
              <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#about">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#skills">Skills</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#projects">Projects</a>
          </li>
        </ul>
      </div>
    </nav>

    <hr />

    <section class="intro" id="intro">
      <div class="row infoRow">
        <div class="col-sm-6">
          <h1 class="font-weight-bolder">
            Hello, I am
            {{name}}.
          </h1>

          <h3 class="font-weight-bolder">
            <script>
              let obj = []; `{{#each key_points}}
                ${obj.push(`{{this}}`)}
              {{/each}}`; document.write(` A <span class="typewrite
              font-weight-bolder text-danger" data-period="2000"
              data-type='${JSON.stringify(obj)}'> <span class="wrap"></span>
              </span>. `);
            </script>
          </h3>
          <p class="mt-4 tagLine">{{Introtagline}}</p>
        </div>
        <div class="col-sm-6">
          <img
            src="{{profileImage}}"
            alt="Profile Pic"
            class="profileImage rounded mx-auto d-block"
            width="250px"
          />

          <p class="text-center links">
            {{#each links as |link|}}
              {{#if twitter}}
                <a href="{{twitter}}"><i class="fab fa-twitter"></i></a>
              {{else}}
                {{#if linkedin}}
                  <a href="{{linkedin}}"><i class="fab fa-linkedin"></i></a>
                {{else}}
                  {{#if facebook}}
                    <a href="{{facebook}}"><i class="fab fa-facebook-f"></i></a>
                  {{else}}
                    {{#if instagram}}
                      <a href="{{instagram}}"><i
                          class="fab fa-instagram"
                        ></i></a>
                    {{else}}
                      <a href="{{github}}"><i class="fab fa-github"></i></a>
                    {{/if}}
                  {{/if}}
                {{/if}}
              {{/if}}
            {{/each}}
          </p>
        </div>
      </div>
    </section>

    <hr />

    <section class="about" id="about">
      <div class="row infoRow">
        <h1 class="font-weight-bold">About</h1>

        <p class="mt-4">
          {{{about}}}
        </p>
      </div>
    </section>

    <hr />

    <section class="skills" id="skills">
      <div class="main-heading">
        <h1 class="font-weight-bold">Skills</h1>
      </div>
      <div class="row infoRow">
        {{#each skills}}
          <div class="col-sm-4 mb-4">
            <div class="card skillsCard">
              <div class="card-body">
                <p class="text-center">{{this}}</p>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </section>

    <hr />

    <section class="projects" id="projects">
      <div class="main-heading">
        <h1 class="font-weight-bold">Projects</h1>
      </div>

      <div class="row infoRow">
        {{#each projects}}
          <div class="col-sm-4 mb-4">
            <div class="card projectsCard">
              <div class="card-body">
                <h3 class="font-weight-bold">{{projectName}}</h3>
                <p>{{{projectDescription}}}</p>
              </div>
              <div class="card-footer text-center">
                <a href="{{projectLink}}" class="project_link">View Project</a>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </section>
  </div>

  <script>
    document.title = 'Portfolio-{{name}}';
  </script>
{{/each}}
