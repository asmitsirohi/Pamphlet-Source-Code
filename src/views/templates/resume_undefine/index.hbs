  <script src="/templateDependencies/typewritterEffect.js"></script>
  <script src="/templateDependencies/sendingmail.js"></script>

  <script>
    function get_random_color() {
      var letters = '0123456789ABCDEF'.split('');
      var color = '#';
      for (var i = 0; i < 6; i++) {
        color += letters[Math.round(Math.random() * 15)];
      }
      return color;
    }
    $(function () {
      $(".response").each(function () {
        $(this).css("background-color", get_random_color());
      });
    });

  </script>
